<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:id="@+id/settings">

        <!-- TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/settings_title"
            android:textColor="@color/title"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="@dimen/title_size"
            android:id="@+id/settings_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp" />

        <!-- FORM -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/settings_title">

            <!-- My password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/my_password"
                android:layout_marginBottom="5dp"
                android:textColor="#666"
                android:textAllCaps="true"
                android:id="@+id/my_password_label" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="5dp"
                android:textColor="@color/input_color"
                android:textSize="@dimen/input_text_size"
                android:inputType="textPassword"
                android:background="@color/input_background"
                android:id="@+id/editText" />

            <!-- New password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/new_password"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:textColor="#666"
                android:textAllCaps="true"
                android:id="@+id/new_password_label" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="5dp"
                android:textColor="@color/input_color"
                android:textSize="@dimen/input_text_size"
                android:inputType="textPassword"
                android:background="@color/input_background"
                android:id="@+id/new_password" />

            <!-- Check new password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/check_new_password"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:textColor="#666"
                android:textAllCaps="true"
                android:id="@+id/check_new_password_label" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="5dp"
                android:textColor="@color/input_color"
                android:textSize="@dimen/input_text_size"
                android:inputType="textPassword"
                android:background="@color/input_background"
                android:id="@+id/check_new_password" />

            <!-- Activate / deactivate notifications -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/notifications"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:textColor="#666"
                android:textAllCaps="true"
                android:id="@+id/notifications_label" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activate_notifications" />

            <!-- Set informations visible -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/informations"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:textColor="#666"
                android:textAllCaps="true"
                android:id="@+id/set_informations_visible_label" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/set_informations_visible" />

            <!-- Submit Button -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/add_place"
                android:id="@+id/buttonAddPlace"
                android:textColor="#fff"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textAllCaps="true"
                android:layout_marginTop="50dp"
                android:textSize="@dimen/text_size_button_form"
                android:background="@drawable/submit_login_button"
                android:layout_gravity="center_horizontal" />

            <!-- Cancel Link -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/cancel"
                android:layout_marginTop="12dp"
                android:textSize="13sp"
                android:id="@+id/cancelAddPlace"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>