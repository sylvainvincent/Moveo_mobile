<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#43b1cb"
        android:id="@+id/register">

        <!-- Logo -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:src="@drawable/logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:contentDescription="@string/logo_description" />

        <!-- LINEAR LAYOUT 1 EMAIL -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/logo"
            android:id="@+id/linear1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true">

                <!-- TextView Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/text_mail"
                    android:textColor="#fff"
                    android:textAllCaps="true"
                    android:id="@+id/email" />

                <!-- EditText Email -->
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/register_edit_text_height"
                    android:inputType="textEmailAddress"
                    android:background="#fff"
                    android:id="@+id/editEmail"
                    android:layout_gravity="bottom" />

        </LinearLayout>

        <!-- LINEAR LAYOUT 2 MOT DE PASSE -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/linear1"
            android:id="@+id/linear2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_centerHorizontal="true">

            <!-- TextView Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/text_password"
                android:layout_gravity="top"
                android:textColor="#fff"
                android:textAllCaps="true"
                android:id="@+id/password" />

            <!-- EditText Password -->
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="@dimen/register_edit_text_height"
                android:inputType="textPassword"
                android:background="#fff"
                android:id="@+id/editPassword"
                android:layout_gravity="bottom"/>

        </LinearLayout>

        <!-- LINEAR LAYOUT 3 NOM -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/linear2"
            android:id="@+id/linear3"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true">

                <!-- TextView Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/text_name"
                    android:textColor="#fff"
                    android:textAllCaps="true"
                    android:id="@+id/name" />

                <!-- EditText Name -->
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/register_edit_text_height"
                    android:inputType="textPersonName"
                    android:background="#fff"
                    android:id="@+id/editName"
                    android:layout_gravity="bottom" />

        </LinearLayout>

        <!-- LINEAR LAYOUT 4 PRÃ‰NOM -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/linear3"
            android:id="@+id/linear4"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true">

            <!-- TextView Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/prenom"
                android:textColor="#fff"
                android:textAllCaps="true"
                android:id="@+id/firstName" />

            <!-- EditText Firstname -->
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="@dimen/register_edit_text_height"
                android:inputType="textPersonName"
                android:id="@+id/editFirstName"
                android:background="#fff"
                android:layout_gravity="bottom" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerErrorMsg"
            android:text="a"
            android:layout_below="@id/linear4"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/button_register"
            android:id="@+id/buttonRegister"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_button_form"
            android:background="@drawable/style_button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</ScrollView>