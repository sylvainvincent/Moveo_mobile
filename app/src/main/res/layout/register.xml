<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#43b1cb">

        <!-- LOGO -->
        <ImageView
            android:id="@+id/logo_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/logo"
            android:contentDescription="@string/logo_description" />

        <!-- EMAIL -->
        <LinearLayout
            android:id="@+id/linear_email_register"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/logo_register"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true">

                <!-- TextView Email -->
                <TextView
                    android:id="@+id/text_email_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/register_text_mail"
                    android:textColor="#fff"
                    android:textAllCaps="true" />

                <!-- EditText Email -->
                <EditText
                    android:id="@+id/edit_email_register"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/register_edit_text_height"
                    android:layout_gravity="bottom"
                    android:inputType="textEmailAddress"
                    android:background="#fff" />

        </LinearLayout>

        <!-- PASSWORD -->
        <LinearLayout
            android:id="@+id/linear_password_register"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/linear_email_register"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_centerHorizontal="true">

            <!-- TextView Password -->
            <TextView
                android:id="@+id/text_password_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/register_text_password"
                android:textColor="#fff"
                android:textAllCaps="true" />

            <!-- EditText Password -->
            <EditText
                android:id="@+id/edit_password_register"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/register_edit_text_height"
                android:layout_gravity="bottom"
                android:inputType="textPassword"
                android:background="#fff" />

        </LinearLayout>

        <!-- NAME -->
        <LinearLayout
            android:id="@+id/linear_name_register"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/linear_password_register"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true">

                <!-- TextView Name -->
                <TextView
                    android:id="@+id/text_name_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/register_text_name"
                    android:textColor="#fff"
                    android:textAllCaps="true"/>

                <!-- EditText Name -->
                <EditText
                    android:id="@+id/edit_name_register"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/register_edit_text_height"
                    android:inputType="textPersonName"
                    android:background="#fff"
                    android:layout_gravity="bottom" />

        </LinearLayout>

        <!-- FIRSTNAME -->
        <LinearLayout
            android:id="@+id/linear_firstname_register"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/linear_name_register"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true">

            <!-- TextView Firstname -->
            <TextView
                android:id="@+id/text_firstname_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/register_text_name"
                android:textColor="#fff"
                android:textAllCaps="true" />

            <!-- EditText Firstname -->
            <EditText
                android:id="@+id/edit_firstname_register"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/register_edit_text_height"
                android:layout_gravity="bottom"
                android:inputType="textPersonName"
                android:background="#fff" />

        </LinearLayout>

        <!-- REGISTER BUTTON -->
        <LinearLayout
            android:id="@+id/linear_button_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/linear_firstname_register"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/button_register"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/button_register"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_button_form"
                android:background="@drawable/style_button"/>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>