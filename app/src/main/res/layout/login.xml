<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#43b1cb"
    android:id="@+id/login">

    <!-- LOGO -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo_login"
        android:src="@drawable/logo"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/logo_description" />

    <!-- EMAIL -->
    <LinearLayout
        android:id="@+id/linear_email_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/logo_login"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true">

            <!-- TextView Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/login_text_email"
                android:textColor="#fff"
                android:textAllCaps="true"
                android:id="@+id/text_email_login" />

            <!-- EditText Email -->
            <EditText
                android:id="@+id/edit_email_login"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/field_height"
                android:inputType="textEmailAddress"
                android:background="#fff"/>

       </LinearLayout>

    <!-- PASSWORD -->
    <LinearLayout
        android:id="@+id/linear_password_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/linear_email_login"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true">

        <!-- TextView Password -->
        <TextView
            android:id="@+id/text_password_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/login_text_password"
            android:textColor="#fff"
            android:textAllCaps="true"/>

        <!-- EditText Password -->
        <EditText
            android:id="@+id/edit_password_login"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/field_height"
            android:textSize="@dimen/input_text_size"
            android:padding="10dp"
            android:inputType="textPassword"
            android:background="#fff"
            android:layout_gravity="bottom" />

    </LinearLayout>

    <!-- LOGIN BUTTON -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/linear_password_login"
        android:id="@+id/linear_button_login"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="@string/login_text_button"
            android:id="@+id/button_login"
            android:textColor="#fff"
            android:textSize="13dp"
            android:background="@drawable/style_button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

    <!-- Mot de passe oublié -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/linear_button_login"
        android:id="@+id/linear_link_lost_password"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Mot de passe oublié ?"
            android:id="@+id/link_lost_password"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="#056b83" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/linear_link_lost_password"
        android:id="@+id/linear_link_registration"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/link_registration_message"
            android:id="@+id/link_registration"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#056b83" />
    </LinearLayout>

</RelativeLayout>