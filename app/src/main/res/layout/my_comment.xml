<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:layout_margin="40dp"
    android:padding="15dp">

    <TextView
        android:id="@+id/text_my_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/text_my_comment"
        android:paddingBottom="10dip" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="5dp"
        android:textSize="13sp"
        android:id="@+id/edit_my_comment"
        android:background="@drawable/edit_text_style"
        android:layout_below="@id/text_my_comment"
        android:inputType="text" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_my_comment"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delete_comment"
        android:text="@string/delete"
        android:layout_marginTop="20dp"
        android:background="#b3414b"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:layout_marginRight="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="@dimen/input_text_size" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/modify_comment"
        android:text="@string/modify"
        android:layout_marginTop="20dp"
        android:background="#43b1cb"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="@dimen/input_text_size" />
    </LinearLayout>

</RelativeLayout>