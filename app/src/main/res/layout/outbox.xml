<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:id="@+id/outbox">

        <!-- MENU -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/menu"
            android:background="#3cb2cc"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_action_logo"
                    android:id="@+id/logo" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/search"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/search_icon" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu"
                    android:layout_marginTop="20dp"
                    android:id="@+id/menu_icon" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Envoyer un message"
            android:textColor="#3cb2cc"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:id="@+id/sendMessageTitle"
            android:layout_marginTop="59dp"
            android:layout_below="@+id/menu"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Vous allez envoyer un message Ã  Username"
            android:id="@+id/sendToUser"
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_marginTop="43dp"
            android:layout_below="@+id/sendMessageTitle"
            android:layout_alignLeft="@+id/sendMessageTitle"
            android:layout_alignStart="@+id/sendMessageTitle"
            android:layout_alignRight="@+id/sendMessageTitle"
            android:layout_alignEnd="@+id/sendMessageTitle" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:id="@+id/sendMessage"
                android:background="#ccc"
                android:layout_below="@+id/sendToUser"
                android:layout_marginTop="15dp"
                android:layout_alignLeft="@+id/sendToUser"
                android:layout_alignStart="@+id/sendToUser"
                android:layout_alignRight="@+id/sendToUser"
                android:layout_alignEnd="@+id/sendToUser" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Envoyer"
            android:id="@+id/buttonSendMessage"
            android:textColor="#fff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="25dp"
            android:textSize="@dimen/text_size_button_form"
            android:background="@drawable/style_button"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/sendMessage"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ou annuler"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="13dp"
            android:layout_marginTop="15dp"
            android:id="@+id/cancelMessage"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/buttonSendMessage"
            android:layout_alignRight="@+id/buttonSendMessage"
            android:layout_alignEnd="@+id/buttonSendMessage" />

    </RelativeLayout>

</ScrollView>